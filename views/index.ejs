<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
<!-- GOOGLE FONT -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Akshar:wght@100;200;300;400;500;600;700&display=swap"
      rel="stylesheet"/>
<!-- STYLE SHEET LINK -->
    <link rel="stylesheet" href="style.css" />
<!-- ICONS -->
<script src="https://kit.fontawesome.com/ec41095585.js" crossorigin="anonymous"></script>
<!-- SITE TITLE -->
    <title>Dev Kitty At Your Service</title>
  </head>


  <body>
      <!--*********HEADER*********  -->
    <div class="container-header">
      <header>
        <nav>
          <a href="https://github.com/JesacaLin/dev-kitty.git" target="_blank"><img src="img/Github@2x.svg" class="logo" alt="Github logo" /></a>
        </nav>
        <div class="flex-header">
          <div class="main-title">
            <img src="img/DEV.png" alt="Dev Kitty title">
          </div>
          <div>
            <img src="img/logo-yellow@2x.svg" class="main-title-logo" alt="site logo"/>
          </div>
          <p class="header-about">
            //  A platform to practice developer 
            interview questions with cute animals!  //
          </p>
          
        </div>
      </header>


  <!--*********QUIZ SECTION*********  -->
      <main>
        <section class="content">
          <!-- <h4 class="secondaryTitle">Hi, Jesaca</h4> -->
          <p class="content-p">WHAT WOULD YOU 
            LIKE TO STUDY
            TODAY?</p>
          <li class="show-modal">
            <button class="html">
              <img src="img/cat.svg" class="animal-icons" alt="cat icon" />
            </button>
            <button class="css">
              <img src="img/shark.svg" class="animal-icons" alt="shark icon" />
            </button>
            <button class="js">
              <img src="img/llama.svg" class="animal-icons" alt="llama icon" />
            </button>

            <button class="node">
              <img src="img/deer.svg" class="animal-icons" alt="deer icon" />
            </button>
            <button class="behavorial">
              <img src="img/duck.svg" class="animal-icons" alt="duck icon" />
            </button>
            <button class="my-question">
              <img src="img/beaver.svg" class="animal-icons" alt="beaver icon" />
            </button>
          </li>

<!--*********MODAL SECTION*********  -->
          <div class="modal hidden">
            <h3 class="title">Question:</h3>
            <p id="tipParagraph"></p>

            <img
              class="surprise-image"
              src=""
              alt="Surprise cute animal photo"
            />

            <li class="flex-modal-btn">
              <div class="btn-break">
                <button class="save-modal"><img src="img/heart.svg" class="save" alt="save button"></button>
              </div>
              <div class="btn-break">
                <button class="more-modal">More!</button>
              </div>
              <div class="btn-break">
                <button class="close-modal"><img src="img/x2.svg" class="close" alt="close button"></button>
              </div>
            </li>
          </div>

          <div class="overlay hidden"></div>
        </section>
      </main>
    </div>


<!--*********ADD A QUESTION SECTION*********  -->

    <section class="add-a-question" id="redirect">
      <section class="add">
        <h4 class="about-why">ADD A QUESTION</h4>
        <!--*********DROPDOWN MENU*********  -->
        <form action="/" method="POST" class="add-q-form">
          <select name="category" id="add-q-section">
            <option value="Html">CATEGORY</option>
            <option value="HTML/CSS">HTML/CSS</option>
            <option value="JS">JAVASCRIPT</option>
            <option value="FRAMEWORKS">FRAMEWORKS</option>
            <option value="BACKEND">BACKEND</option>
            <option value="BEHAVORIAL">BEHAVORIAL</option>
            <option value="OTHER">OTHER</option>
        </select>
        <!-- WHAT I NEED IS A PSEOELEMENT AS A PLACEHOLDER IN THIS FEILD I THINK -->
        <textarea class="question-field" name="content" placeholder="Your question goes here..." wrap="soft"></textarea>
        <input type="submit" class="submit-q" value="ADD">
        <!-- <button type="submit" class="submit-q"><span>ADD</span></button> -->

      </form>
      </section>
        <img src="img/bg-ask-cat.jpg" class="cat-photo" alt="cat photo"/>
    </section>




<!--*********MY QUESTIONS SECTION*********  -->

<section class="render">
<h4 class="about-why">MY QUESTIONS</h4>
<ul class="render-my-questions">
  <% devkittyQ.forEach(details => { %>
    <li class="my-q-list">
      <div class="my-q-list-category"><%= details.category %><span>:</span></div>
      <div class="my-q-list-content"><%= details.content %></div>
      <a href="/edit/<%= details._id %>" class="edit"><span class="fa-regular fa-pen-to-square"></span></a>
      <a href="/remove/<%= details._id %>" class="remove"><span class="fa-regular fa-trash-can"></span></a>
    </li>
  <% }) %>
</ul>
</section>







<!--*********TECH STACK SECTION*********  -->
      <section class="tech">
        <h4 class="about-why">TECH STACK</h4>
        <ul class="tech-used">
          <li><img src="img/Javascript.svg" alt="javascript icon" /><p class="tech-p">JavaScript</p></li>
          <li><img src="img/HTML5.svg" alt="html icon" /><p class="tech-p">HTML 5</p></li>
          <li><img src="img/CSS3.svg" alt=" icon" /><p class="tech-p">CSS 3</p></li>
          <li><img src="img/Figma.svg" alt=" icon" /><p class="tech-p">Figma</p></li> 
          <li> <img src="img/Adobe Photoshop.svg" alt=" icon" />
            <p class="tech-p">Photoshop</p></li>
        </ul>
        <ul class="tech-used">
          <li><img src="img/Nodejs.svg" alt=" icon" /><p class="tech-p">Node.js</p></li>
          <li><img src="img/MongoDB.svg" alt=" icon" /><p class="tech-p">MongoDB</p></li>
          <li><img src="img/Nodemon.svg" alt=" icon" /><p class="tech-p">Nodemon</p></li>
          <li><img src="img/Postman.svg" alt=" icon" /><p class="tech-p">Postman</p></li>
          <li><img src="img/npm.svg" alt=" icon" /><p class="tech-p">npm</p></li> 
        </ul>
      </section>


  <!--*********FOOTER*********  -->
    <footer>
      <section class="footer-links">
        <ul class="links">
          <a href="https://github.com/JesacaLin" target="_blank">// GITHUB</a>
          <a href="/">// PORTFOLIO</a>
          <a href="/">// CONTACT</a>
        </ul>
      </section>



      <div class="footer-title">
        <!-- *********will have to give credit to the icons********** -->
        <a href="/"><img src="/img/footer-icon.svg" class="footer-logo" alt="yellow logo" /></a>
        <!-- <h2>DEV KITTY</h2> -->
      </div>
    </footer>
  
    <!-- the exporting file has to always come first -->
    <script src="data.js"></script>
    <script src="main.js"></script>


  </body>
</html>
